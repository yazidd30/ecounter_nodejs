<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Data Product</h3>

        <div class="card-tools">
          <div class="input-group input-group-sm" style="width: 150px;">
            <input type="text" name="table_search" class="form-control float-right" placeholder="Search">

            <div class="input-group-append">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
      <!-- /.card-header -->
       <!-- /.box-alert -->
 <% if (messages.info) { %>                   
  <div class="box-body">
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><i class="icon fa fa-check"></i> Alert!</h4>
      <%= messages.info  %>
    </div>
  </div>
  <% } %>
  <!-- /.box-header -->
  <div class="card-body table-responsive p-0">
    <table class="table table-hover">
      <tr>
        <th>No</th>
        <th>Image</th>
        <th>Title</th>
        <th>Create Date</th>
        <th>Status</th>
        <th width="400">Description</th>
        <th width="100">Modify</th>
      </tr>
      <%
        if(data.length){
          var no = 1;
          for(var i = 0; i < data.length; i++){
      %>	
      <tr>
        <td><%= no++ %></td>
        <td><img style="padding-top: 20px" src="/public/news_images/<%=data[i].gambar_produk%>" width="70" height="70" /></td>
        <td><%= data[i].nama_produk %></td>
        <td><%= data[i].createdate %></td>
        <td><span class="label label-success">Approved</span></td>
        <td>	<%=data[i].des_product.substring(0 , 50)%> <a href="#">read more</a></td>
        <td>
          <a class="btn btn-warning" href="/ecounter_nodejs/admin/edit_product/<%= data[i].id_product %>"><i class="glyphicon glyphicon-edit"></i></a>                      
          <a class="btn btn-danger" href="/ecounter_nodejs/admin/delete_product/<%= data[i].id_product %>" onclick="return confirm('Are you sure want to delete ?')"><i class="glyphicon glyphicon-trash"></i></a>
        </td>
      </tr>                                
      <%
    } 
    } %>
    </table>
  </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div><!-- /.row -->

